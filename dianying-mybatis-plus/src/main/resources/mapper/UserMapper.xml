<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mugua.dianying.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mugua.dianying.entity.User">
        <id column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="nick_name" property="nickName" />
        <result column="password" property="password" />
        <result column="pic_path" property="picPath" />
        <result column="status" property="status" />
        <result column="sessionId" property="sessionId" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id AS userId, username, nick_name AS nickName, password, pic_path AS picPath, status, sessionId, create_time AS createTime
    </sql>

</mapper>
